<div class="has-text-centered">
  <h2 class='is-size-2 m-3'><%= t ".title" %></h2>

  <%= form_with model: @board, local: true do |f| %>
    <% if @board.errors.any? %>
      <article class="message is-danger">
        <div class="message-body">
          <%= render 'shared/error_messages', object: f.object %>
        </div>
      </article>
    <% end %>


    <div class="form">
    <%= f.label :title, 'タイトル', class: "is-size-3" %><br>
    <%= f.text_field :title, placeholder: "0〜20文字まで", size: "25", class: "is-size-4" %><br>

    <br>

    <%= f.label :body, '不幸な出来事', class: "is-size-3" %><br>
    <%= f.text_area :body, placeholder: "0〜200文字まで", size: "25x10", class: "is-size-4 mb-5" %><br>
    </div>
    <%= f.submit '投稿する' %>
  <% end %>
</div>